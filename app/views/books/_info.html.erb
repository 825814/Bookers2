

  <div class="row">
    <%= link_to edit_user_path(current_user) do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </div>


  <h2>New book</h2>
  <%= form_with model: @book, method: :post do |f| %>

    <div>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :opinion %><br>
      <%= f.text_area :body %>
    </div>

    <div>
      <%= f.submit 'Create Book', class:"btn btn-success" %>
    </div>

  <% end %>
