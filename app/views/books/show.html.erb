<p id="notice"></p>

<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'info', books: @book_new, user: @book.user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>

            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.user == current_user %>
                   <%= link_to "Edit", edit_book_path, class: "btn btn-success btn-sm " %>
                   <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to book_path(@book), method: :delete, data: { confirm: '本当に消しますか?' } do %>
                  <button type="button" class="btn btn-danger">Destroy</button>
                  <% end %>
                <% end %>
              </td>
            </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>

