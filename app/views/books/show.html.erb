<div class="container">
  <div class="row">

    <div class="col-md-3" style="background-color: orange;">
      <h2>User info</h2>
      <%= image_tag 'sample-author1.jpg' %>
      <table>
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
           <th>introduction</th>
           <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>


      <h2>New book</h2>
      <%= form_with model: @book, url: '/books', method: :post do |f| %>

        <div>
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>

        <div>
          <%= f.label :opinion %><br>
          <%= f.text_area :body %>
        </div>

        <div>
          <%= link_to 'Create Book', books_path %>
        </div>

      <% end %>
    </div>

    <div class="col-md-8">
      <h2>Book detail</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>

              <td><%= image_tag 'sample-author1.jpg' %><br></%><%= current_user.name %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td><%= link_to 'Edit', edit_book_path(book) %></td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: '本当に消しますか?' } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

