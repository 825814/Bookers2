

<div class="container">
  <div class="row">

    <div class="col-md-3" style="background-color: orange;">
      <h2>User info</h2>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <table>
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
           <th>introduction</th>
           <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>


      <h2>New book</h2>
      <%= form_with model: @book_new, url: books_path, method: :post do |f| %>

        <div>
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>

        <div>
          <%= f.label :opinion %><br>
          <%= f.text_area :body %>
        </div>

        <div>
          <%= f.submit 'Create Book', class:"btn btn-success" %>
        </div>

      <% end %>
    </div>

    <div class="col-md-8">
      <h2>Book detail</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>

            <tr>
              <td>
                <%= link_to user_path do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td><%= link_to 'Edit', edit_book_path(@book) %></td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか?' } %>
                <% end %>
              </td>
            </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>

