<h1>User info</h1>

<h1>New book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

    <div>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :opinion %><br>
      <%= f.text_area :body %>
    </div>

    <div>
     <%= link_to 'Create Book', books_path %>
    </div>

   <% end %>
