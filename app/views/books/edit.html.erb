<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>Editing Book</h1>

      <%= form_with model: @book do |f| %>

        <div class="field">
          <%= f.label :Title %><br>
          <%= f.text_field :title, id: :post_title %>
        </div>

        <div class="field">
          <%= f.label :Opinion %><br>
          <%= f.text_area :body, id: :post_body %>
        </div>

        <div class="actions">
          <%= f.submit 'Update Book', class:"btn btn-success" %>
        </div>
      <% end %>

      <%= link_to 'Show', book_path %> |
      <%= link_to 'Back', books_path %>

    </div>
  </div>
</div>