<div class="container">
  <div class="row">

    <div class="col-md-3" style="background-color: orange;">
      <%= render 'books/info', books: @books,user: current_user %>
    </div>

    <div class="col-md-8">
      <h2>Users</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td></td>
              <td><%= link_to 'show', user_path(user) %></td>
              <td>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

