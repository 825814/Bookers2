
<p id="notice"></p>

<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/info', books: @books, user: @user %>
    </div>

    <div class="col-md-8">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%=image_tag book.get_profile_image(100,100) %></td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
                </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


