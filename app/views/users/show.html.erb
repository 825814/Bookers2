<div class="container">
  <div class="row">

    <div class="col-md-3" style="background-color: orange;">
      <h2>User info</h2>

      <%= image_tag @user.get_profile_image(100,100) %>
      <table>
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
           <th>introduction</th>
           <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>


      <h2>New book</h2>
      <%= form_with model: @user, url: '/users/:id', method: :post do |f| %>

        <div>
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>

        <div>
          <%= f.label :opinion %><br>
          <%= f.text_area :body %>
        </div>

        <div>

          <%= f.submit 'Create Book', class:"btn btn-success" %>

        </div>

      <% end %>
    </div>

    <div class="col-md-8">
      <h2>Books</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%=image_tag @user.get_profile_image(100,100) %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


